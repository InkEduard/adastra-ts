<section class="py-10">
  <div class="container">
    {% if section.settings.heading != blank %}
      <h1 class="mb-14 mt-5 font-normal uppercase">{{ section.settings.heading }}</h1>
    {% endif %}
  </div>

  {% liquid
    render 'ui-colors'
    render 'ui-icons'
    render 'ui-buttons'
    render 'ui-forms'
  %}
</section>

{% schema %}
  {
    "name": "Frontend Guide",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      }
    ],
    "presets": [
      {
        "name": "Frontend Guide"
      }
    ]
  }
{% endschema %}
